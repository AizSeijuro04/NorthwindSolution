@model Northwind.Contracts.Dto.Product.ProductDto


<h2>Detail Product</h2>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/detailProduct.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />

@using (Html.BeginForm("CreateFullOrder", "ProductOnSale", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="card-wrapper">
        <div class="card">
            <!-- card left -->
            <div class="product-imgs">
                <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner" style="height:500px;width:500px">
                        @foreach (var item in Model.ProductPhotos)
                        {
                            if (Model.ProductPhotos.FirstOrDefault() == item)
                            {
                                <div class="carousel-item active">
                                    <img class="card-img-top" style="height:500px" src="@Url.Content("~/Resources/Images/"+item.PhotoFilename)" alt="Card image cap">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="card-img-top" style="height:500px" src="@Url.Content("~/Resources/Images/"+item.PhotoFilename)" alt="Card image cap">
                                </div>
                            }
                        }
                        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- card right -->
            <div class="product-content">
                @Html.HiddenFor(Model=>Model.ProductId)
                <h2 class="product-title">@Html.DisplayFor(model=>model.ProductName)</h2>
                <div class="product-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <span>4.7(21)</span>
                </div>

                <div class="product-price">
                    @*<p class="last-price">Old Price: <span>$257.00</span></p>*@

                    @Html.HiddenFor(Model=>Model.UnitPrice)
                    <p class="new-price">Unit Price: <span> @Html.DisplayFor(model=>model.UnitPrice) </span></p>
                </div>

                <div class="product-detail">
                    <h2>about this item: </h2>
                    <ul>
                        <li>Available: <span>in stock</span></li>
                        <li>Category: <span>@Html.DisplayFor(model=>model.CategoryId)</span></li>
                        <li>Shipping Fee: <span>Free</span></li>
                    </ul>
                </div>
                <div class="purchase-info">
                    @Html.TextBox("QuantityPerUnit",1,new {@type="number"})
                    <button type="submit" class="btn btn-danger">
                        Create Order
                    </button>
                </div>

                <div class="social-links">
                    <p>Share: </p>
                    <a href="#">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-pinterest"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function getPlus(a, b) {
        var minusBtn = document.getElementById("minus"),
            plusBtn = document.getElementById("plus"),
            numberPlace = document.getElementById("hasil"),
            number = 0, /// number value
            min = 0, /// min number
            max = b; /// max number
        for (let i = 0; i < max; i++) {
            minusBtn.onclick = function () {
                if (number > min) {
                    number = number - 1; /// Minus 1 of the number
                    numberPlace.setAttribute('value', number); /// Display the value in place of the number
                }
                if (number == min) {
                    numberPlace.style.color = "red";
                    setTimeout(function () { numberPlace.style.color = "black" }, 500)
                }
                else {
                    numberPlace.style.color = "black";
                }

            }
            plusBtn.onclick = function () {
                if (number < max) {
                    number = number + 1;
                    numberPlace.setAttribute('value', number);  /// Display the value in place of the number
                }
                if (number == max) {
                    numberPlace.style.color = "red";
                    setTimeout(function () { numberPlace.style.color = "black" }, 500)
                }

                else {
                    numberPlace.style.color = "black";

                }
            }
        }
    }
</script>

